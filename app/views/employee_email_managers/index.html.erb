<h1>Manage who gets email notifications</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>Name</td>
        <td>Email</td>

      </tr>
    <% @emails.each do |email| %>

      <tr>
        <td><%= email.name %></td>
        <td><%= email.email %></td>
        <td><%= link_to 'Remove', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <%= render 'form' %>