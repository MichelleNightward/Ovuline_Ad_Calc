<%= form_for @company do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>Name: <%= f.text_field :name, :required => true %>
  <p>Company: <%= f.text_field :companyname, :required => true %>
  <p>Email Address: <%= f.email_field :email, :required => true %>
  <p>Phone: <%= f.text_field :phone, :required => true %>

  <%= f.submit 'Submit Info', :class => 'button' %>
<% end %>
