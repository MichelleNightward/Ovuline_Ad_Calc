

<%= form_for(@quote) do |f| %>
  <% if @quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% @quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='section_pale_orange'>
 <div class = 'section_general'> 
    <center>
      <h2>Choose an app:</h2>
        <table>
          <p> <%= f.select :app_type, [['Ovia Fertility', 'Ovia Fertility'],['Ovia Pregnancy', 'Ovia Pregnancy'],['Both', 'Both']] %> </p>
        </table>

      <h2>Select your platform</h2>
        <table>
          <p> <%= f.select :mobile_platform, [['Android', 'Android'],['IOS', 'IOS'],['Both', 'Both']] %> </p>
        </table>

      <h2>What kind of advertising are you interested in?</h2>
        <table>
          <p> <%= f.select :ad_type, [['Sales (Ads)', 'Sales (Ads)'],['Brand Awareness (Articles)', 'Brand Awareness (Articles)'],['Both', 'Both']] %> </p>
        </table>
      <table>

      <h2>Product Selector:</h2>
      <table>
        <tr>
          <p>Sales (Native Ad) <%= f.check_box(:native_ad) %></p>
          <p>Brand Awareness (Article Ad) <%= f.check_box(:social_ad) %></p>
          <p>Ovia Exclusives <%= f.check_box(:ovuline_exclusive) %></p>
          <p>Email Campaign <%= f.check_box(:email_campaign) %></p>
        </tr>
      </table>

    </center>
  </div>
</div>

<div class = 'section_teal'>
  <div class = 'section_general'>
  <div class = 'vcenter'>
  <center>
    <h2>Budget</h2>
  </center>
    <div class = 'section_teal_padding'>
      <p>Monthly Advertizing Budget <%= f.number_field :budget %></p>
      <p>Begining of Campaign <%= f.text_field :begin_date %> </p> <p>End of Campaign <%= f.text_field :end_date %></p>
      </div>
    </div>
  </div>
</div>


